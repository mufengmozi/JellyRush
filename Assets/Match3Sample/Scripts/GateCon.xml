<?xml version="1.0" encoding="utf-8" ?>
<root>
	<!--关卡、某些特殊的章节可以有名字-->
	<!--关卡类型、0普通1boss类型-->
	<Gate name="我是要成为果冻王的果冻" value="0">
		1
	</Gate>
	<!--关卡目标-->
	<!--name:Point:积分、Clear:消除、Obstacle:障碍、Pass:运输【会根据name来判断下面的节点】-->
	<GateTarget name="">
		<!--目标分数-->
		<TargetPoint>
			700
		</TargetPoint>
		<!--目标果冻-->
		<TargetJelly>
			<!--这里需要的是果冻的种类的编号【多种果冻用逗号隔开】-->
				<type>1</type>
				<number>20</number>
				<type>4</type>
				<number>25</number>
		</TargetJelly>
		<!--障碍元素-->
		<Obstracle>
			<!--这里需要的是障碍的种类的编号【多种障碍用逗号隔开】-->
			<type>1</type>
			<number>20</number>
			<type>4</type>
			<number>25</number>
		</Obstracle>
		<!--传输类型-->
		<Pass>
			<type>1</type>
			<number>20</number>
			<type>4</type>
			<number>25</number>
		</Pass>
	</GateTarget>
	<!--关卡限制，两种类型1：时间限制、2：步数限制。【会根据value值来判断下面的节点名称】-->
	<GateLimit value="1">
		<Time>
			<!--此处以秒为单位-->
			120
		</Time>
		<Move>
			25
		</Move>
	</GateLimit>
	<!--颜色的数量-->
	<NumberOfColor>
		6
	</NumberOfColor>
	<!--星级达标分数-->
	<ScoreTarget>
		[300,600,1000]
	</ScoreTarget>
	<!--宝石运动方向,1:下、2：上、3：左、4：右-->
	<Dirction>
		1
	</Dirction>
	<!--BOSS相关设置-->
	<BOSS name="大胡子船长">
		<!--技能value标示技能的类型。里边的数值标示发动的方式-->
		<Skill value="1">
			<!--1.固定步数发动，2固定时间发动，3固定血量发动【多个技能用逗号隔开】-->
			1
		</Skill>
		<!--技能触发value值，1：固定步数、2：固定时间、3：固定血量发动-->
		<trigger value="1">
			<!--步数、时间、血量都是数值类型时间以秒为单位-->
		</trigger>
	</BOSS>
	<!--地图设置-->
	<!--
	地图排布规律
	个位数：0为空白（不能存在宝石）【1-？】为各种宝石的种类
	十位数：为底部消除方块代号
	百位数：为障碍代号
    千位数：特殊宝石种类（1：横4，2：纵4，3：方块，4：TL，5：5连）
	-->
	<Map>
		[0,0,2003,2003,2,2,2,0];
		[2,130,2,130,3,130,2,130];
		[130,130,130,130,130,130,130,130];
		[3,3,2,3,2,2,2,2];
		[130,130,0,0,0,0,130,130];
		[2,2,2,2,130,2,2,2];
		[2,2,2,2,130,2,2,2];
		[0,2,2,2,130,2,0,0]
	</Map>
</root>